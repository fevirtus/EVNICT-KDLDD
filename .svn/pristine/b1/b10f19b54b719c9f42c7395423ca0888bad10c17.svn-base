<!DOCTYPE HTML PUBLIC "-//W3C//DTD HTML 4.01 Transitional//EN" "http://www.w3.org/TR/html4/loose.dtd"> 
<html xmlns="http://www.w3.org/1999/xhtml"
      xmlns:h="http://java.sun.com/jsf/html"
      xmlns:f="http://java.sun.com/jsf/core"
      xmlns:ui="http://java.sun.com/jsf/facelets"
      xmlns:p="http://primefaces.org/ui"
      xmlns:c="http://java.sun.com/jsp/jstl/core">
    <f:view contentType="text/html">
        <h:head>

        </h:head>
        <h:body>
            <style type="text/css">
                body {
                    margin: 0px;
                    padding: 0px;
                    width: 100%;
                    height: 100%;
                    font-size: 16px;
                    background: #fff;
                }
                div#airport {
                    position: relative;
                    z-index: 1;
                    top: 0px;
                    padding: 0px;
                    padding-top: 0px;
                    margin: 0px;
                    margin-top: 0px;
                    margin-left: auto;
                    margin-right: auto;
                    width: 900px;
                    min-width: 900px;
                    max-width: 900px;
                    background-color: #0f0;
                }
                .ui-panel-footer
                {
                    text-align: center !important;
                    font-size: 13px !important;
                    font-weight: bold !important;
                    border-top-color: #DBE9F5 !important;
                }
            </style>
            <p:panel rendered="#{pltReportChartBean.isShow}" style="overflow: auto !important;background: white!important;display:block;border-radius: 0px !important;border-color: #DBE9F5 !important;"
                     footer="#{pltReportChartBean.nameChart}">        
                <input type="hidden" name="portletId" value="#{portletId}" />                 
                <f:view>
                    <p:chart type="#{pltReportChartBean.typeChart}"                             
                             model="#{pltReportChartBean.barModel}" style="max-width: 95%"/>                      
                </f:view>
            </p:panel>
        </h:body> 
    </f:view>
</html>

